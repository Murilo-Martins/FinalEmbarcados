<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="MauiAppControle.MainPage">

    <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,*,Auto,*,30">
        <!-- Status da Conexão -->
        <Label
            Grid.ColumnSpan="3"
            Text="{Binding StatusConexao}"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="10" />

        <!-- Camera View -->
        <toolkit:CameraView 
            x:Name="cameraView"
            MediaCaptured="MyCamera_MediaCaptured"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            SelectedCamera="{Binding SelectedCamera}"
            />
        <Button
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Text="Capturar e Enviar Imagem"
            Clicked="OnCaptureAndSendFrameClicked"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Margin="10"/>
        <Image x:Name="imagePreview"
           Grid.Row="2"
           Grid.ColumnSpan="3"
           WidthRequest="300"
           HeightRequest="300"
           Aspect="AspectFill"/>
        <!-- Título "Mensagens Recebidas" -->
        <Label 
            x:Name="mensagemLabel"
            Grid.Row="3"
            Grid.ColumnSpan="3"
            Text="Mensagens Recebidas:"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="10,5,10,0"/>

        <!-- Lista de Mensagens -->
        <CollectionView 
            Grid.Row="4"
            Grid.ColumnSpan="3"
            ItemsSource="{Binding MensagensRecebidas}"
            Margin="10"
            >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}" Margin="5" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
    </Grid>
</ContentPage>
