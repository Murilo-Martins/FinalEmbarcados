<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    x:Class="MauiAppControle.MainPage"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <Grid ColumnDefinitions="*,*,*" RowDefinitions="30,*,30">
        <!-- Label de Status da Conexão -->
        <Label 
            Grid.Row="0" 
            Grid.ColumnSpan="3"
            Text="{Binding StatusConexao}" 
            FontSize="Medium"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            TextColor="Green"/>

        <!-- Camera View -->
        <toolkit:CameraView 
            Grid.Row="1" 
            Grid.ColumnSpan="3" 
            SelectedCamera="{Binding SelectedCamera}"/>

        <!-- Entry para mostrar a mensagem recebida -->
        <Entry
            Grid.Row="2"
            Grid.ColumnSpan="3"
            Text="{Binding MensagemRecebida}"
            Margin="10"
            IsReadOnly="True"/>
    </Grid>

</ContentPage>
